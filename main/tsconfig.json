{
	"include": ["src", "test"],
	"compilerOptions": {
		"module": "esnext",
		"target": "ES2020",
		"lib": ["dom", "esnext"],
		"importHelpers": true,
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"moduleResolution": "node",
		"jsx": "react",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true
	}
}
