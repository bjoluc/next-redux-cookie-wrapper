{
	"name": "root",
	"private": true,
	"workspaces": [
		"main",
		"demo"
	],
	"scripts": {
		"lint": "xo",
		"commit": "git-cz",
		"prepare": "husky install && npm run build --workspace=main",
		"docs": "typedoc",
		"docs:watch": "npm run docs -- --watch"
	},
	"devDependencies": {
		"@bjoluc/eslint-config-xo-next": "^1.1.0",
		"@bjoluc/semantic-release-config-npm": "^2.0.0",
		"husky": "^7.0.4",
		"lint-staged": "12.1.2",
		"typedoc": "^0.22.10",
		"xo": "^0.38.2"
	},
	"prettier": "@bjoluc/eslint-config-xo-next/prettier.config",
	"xo": {
		"extends": "@bjoluc/xo-next",
		"prettier": true,
		"rules": {}
	},
	"lint-staged": {
		"{main,demo}/**/*.{ts,tsx}": [
			"xo --fix"
		]
	}
}
